<Page x:Class="ExpertSystems.Pages.Training"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExpertSystems.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="410" d:DesignWidth="782"
      Title="Training">

    <Grid>
        <Grid Background="#FF0097FF" Height="50" VerticalAlignment="Top">
            <Label Content="Тренировка для спины" FontSize="22" FontWeight="Bold" VerticalContentAlignment="Center" Margin="10,0,456,0" Foreground="White"></Label>
            <Button Click="Back" Content="Назад" Width="100" Height="25" HorizontalAlignment="Right" Margin="0,10,10,10"></Button>
        </Grid>
        <Grid Margin="0,50,0,0">
            <ScrollViewer Margin="10">
                <StackPanel x:Name="parrent">
                    <Image x:Name="firstImg" MouseDown="OpenBrowser" Margin="0,0,0,10" Stretch="UniformToFill"></Image>
                    <Image x:Name="secondImg" MouseDown="OpenBrowser"  Margin="0,0,0,10" Stretch="UniformToFill"></Image>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
    </Grid>
</Page>
